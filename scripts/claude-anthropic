#!/usr/bin/env bash
set -euo pipefail

# Switch Claude Code back to Anthropic by removing the Ollama base URL override.
# Provide your real key via environment (recommended) or your secret manager.
unset ANTHROPIC_BASE_URL

# Convenience: if only ANTHROPIC_API_KEY is set, mirror it to AUTH_TOKEN.
if [[ -n "${ANTHROPIC_API_KEY:-}" && -z "${ANTHROPIC_AUTH_TOKEN:-}" ]]; then
  export ANTHROPIC_AUTH_TOKEN="$ANTHROPIC_API_KEY"
fi

exec claude "$@"
